<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/educatorPic"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_educator"
            android:tint="@color/mock"
            android:layout_marginStart="@dimen/margin_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/educatorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            app:layout_constraintStart_toEndOf="@id/educatorPic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/mock_rectangle"/>

    <TextView
            android:id="@+id/educatorEmployment"
            android:layout_width="0dp"
            android:layout_marginEnd="64dp"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorSecondary"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/margin_large"
            app:layout_constraintStart_toStartOf="@id/educatorName"
            app:layout_constraintTop_toBottomOf="@id/educatorName"
            app:layout_constraintEnd_toEndOf="@id/educatorName"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/mock_rectangle"/>

</androidx.constraintlayout.widget.ConstraintLayout>
