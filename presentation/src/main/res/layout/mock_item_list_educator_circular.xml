<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="@dimen/margin_small">

    <View
            android:id="@+id/educatorTitle"
            android:layout_width="@dimen/view_circle_title_size"
            android:layout_height="@dimen/view_circle_title_size"
            android:background="@drawable/mock_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/educatorLastName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:ellipsize="end"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@id/educatorTitle"
            app:layout_constraintStart_toStartOf="@id/educatorTitle"
            app:layout_constraintTop_toBottomOf="@id/educatorTitle"
            android:background="@drawable/mock_rectangle"/>

    <TextView
            android:id="@+id/educatorInitials"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="@id/educatorTitle"
            app:layout_constraintStart_toStartOf="@id/educatorTitle"
            app:layout_constraintTop_toBottomOf="@id/educatorLastName"
            android:background="@drawable/mock_rectangle"/>

</androidx.constraintlayout.widget.ConstraintLayout>

