<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_large"
    tools:context="ru.blizzed.timetablespbu.ui.screens.welcome.student.StudentGroupsSelectionFragment">

    <TextView
        android:id="@+id/manyGroupsHint"
        style="@style/Text.Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:gravity="center"
        android:text="@string/welcome_student_group_selection_many_groups_hint"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selectedGroupsRecycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@drawable/background_rounded_rectangle_small_radius"
        android:backgroundTint="@color/divider"
        android:orientation="vertical"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/addButton"
        app:layout_constraintEnd_toEndOf="@id/manyGroupsHint"
        app:layout_constraintStart_toStartOf="@id/manyGroupsHint"
        app:layout_constraintTop_toBottomOf="@id/manyGroupsHint"
        app:layout_constraintVertical_chainStyle="packed"
        tools:itemCount="3"
        tools:listitem="@layout/item_welcome_student_group" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addButton"
        style="@style/Button.Rounded.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:text="@string/welcome_student_group_selection_add_group"
        app:icon="@drawable/ic_add_24dp"
        app:iconTint="@color/accent"
        app:layout_constraintBottom_toTopOf="@id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectedGroupsRecycler" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextButton"
        style="@style/Button.Rounded.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
