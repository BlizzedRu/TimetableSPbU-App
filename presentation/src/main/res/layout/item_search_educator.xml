<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="?selectableItemBackground">

    <ImageView
            android:id="@+id/educatorPic"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_educator"
            android:layout_marginStart="@dimen/margin_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/educatorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintStart_toEndOf="@id/educatorPic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/likeButton"
            tools:text="Гришкин В.М., доцент"/>

    <TextView
            android:id="@+id/educatorEmployment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorSecondary"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/margin_large"
            app:layout_constraintStart_toStartOf="@id/educatorName"
            app:layout_constraintTop_toBottomOf="@id/educatorName"
            app:layout_constraintEnd_toEndOf="@id/educatorName"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Кафедра КММС"/>


    <FrameLayout
            android:id="@+id/likeButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="@dimen/margin_large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
                android:id="@+id/likeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:clickable="false"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:button="@drawable/button_like"/>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>