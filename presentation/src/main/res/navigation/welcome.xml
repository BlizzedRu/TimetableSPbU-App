<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_welcome"
    app:startDestination="@id/userTypeSelection">

    <fragment
        android:id="@+id/userTypeSelection"
        android:name="ru.blizzed.timetablespbu.ui.screens.welcome.user.UserTypeSelectionFragment"
        android:label="fragment_user_type_selection"
        tools:layout="@layout/fragment_user_type_selection" >

        <action
            android:id="@+id/action_userTypeSelection_to_educatorSelfSelection"
            app:destination="@id/educatorSelfSelection"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/userTypeSelection" />
        <action
            android:id="@+id/action_userTypeSelection_to_studentGroupsSelection"
            app:destination="@id/navigation"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/userTypeSelection"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/educatorSelfSelection"
        android:name="ru.blizzed.timetablespbu.ui.screens.welcome.educator.EducatorSelfSelectionFragment"
        android:label="fragment_educator_self_selection"
        tools:layout="@layout/fragment_educator_self_selection" />

    <fragment
        android:id="@+id/studentGroupsSelection"
        android:name="ru.blizzed.timetablespbu.ui.screens.welcome.student.StudentGroupsSelectionFragment"
        android:label="fragment_educator_self_selection"
        tools:layout="@layout/fragment_student_groups_selection" >
        <action
            android:id="@+id/action_studentGroupsSelection_to_groupSelectionFragment"
            app:destination="@id/groupSelectionFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/studentGroupsSelection" />
    </fragment>
    <fragment
        android:id="@+id/groupSelectionFragment"
        android:name="ru.blizzed.timetablespbu.ui.screens.common.group_search.GroupSearchNavigationFragment"
        android:label="GroupSelectionFragment" />
    <navigation
        android:id="@+id/navigation"
        app:startDestination="@id/studentGroupsSelection" />

</navigation>
