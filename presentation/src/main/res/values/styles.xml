<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="colorPrimaryDark">@color/window_background</item>
        <item name="launcherCredentialsColor">?android:textColorSecondary</item>
    </style>

    <style name="AppTheme.Welcome" />

    <style name="Search">
        <item name="iconsColor">@color/divider</item>
        <item name="searchBackground">@drawable/background_search</item>
        <item name="searchTextColor">@color/primary_text</item>
        <item name="searchHintColor">@color/secondary_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="Button" />

    <style name="Button.Rounded.Primary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="cornerRadius">@dimen/corner_radius_common</item>
    </style>

    <style name="Button.Rounded.Secondary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">13sp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">@dimen/corner_radius_common</item>
        <item name="rippleColor">@color/accent</item>
        <item name="strokeColor">@color/accent</item>
        <item name="strokeWidth">@dimen/common_stroke</item>
    </style>

    <style name="Search.Accent" parent="Search">
        <item name="searchBackground">@drawable/background_search_accent</item>
        <item name="iconsColor">@color/search_toolbar_background</item>
    </style>

    <style name="Text" />

    <style name="Text.Header">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Title" parent="Text.Header">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="Text.Subtitle" parent="Text.Title">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="CardHeader">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Card">
        <item name="android:elevation">@dimen/card_elevation</item>
        <item name="android:background">@drawable/background_card</item>
    </style>

    <style name="CardContainer">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/card_elevation</item>
    </style>

</resources>
