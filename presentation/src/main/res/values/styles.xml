<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Search">
        <item name="iconsColor">@color/divider</item>
        <item name="searchBackground">@drawable/background_search</item>
        <item name="searchTextColor">@color/primary_text</item>
        <item name="searchHintColor">@color/secondary_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="Search.Accent" parent="Search">
        <item name="searchBackground">@drawable/background_search_accent</item>
        <item name="iconsColor">@color/accent</item>
    </style>

</resources>
